{
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/boldgrid/library"
        },
        {
            "type": "git",
            "url": "https://github.com/boldgrid/boldgrid-inspirations-premium"
        },
        {
            "type": "git",
            "url": "https://github.com/boldgrid/bgforms"
        },
        {
            "type": "git",
            "url": "https://github.com/boldgrid/plugin-installer"
        }
    ],
    "require": {
        "boldgrid/library": "dev-php8.2-fixes",
        "boldgrid/boldgrid-inspirations-premium": "dev-php8.2-fixes",
        "boldgrid/plugin-installer": "dev-php8.2-fixes",
        "boldgrid/bgforms": "dev-php8.2-fixes"
    },
    "scripts": {
        "post-autoload-dump": [
            "yarn run cpx -v 'node_modules/font-awesome/css/*' 'assets/css/font-awesome/css/'",
            "yarn run cpx -v 'node_modules/font-awesome/fonts/*' 'assets/css/font-awesome/fonts/'",
            "yarn run cpx -v 'node_modules/jquery-toggles/toggles*.js' 'assets/js/jquery-toggles/'",
            "yarn run cpx -v 'node_modules/jquery-toggles/css/toggles-full.css' 'assets/css/jquery-toggles/'",
            "composer run-script post-autoload-dump -d ./vendor/boldgrid/library"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "yoast/phpunit-polyfills": "^1.0"
    }
}
